<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/mon_padding"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/HERO_image"
        android:src="@drawable/banner_construction11"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mon_hero_height_medium"/>

    <TextView
        android:id="@+id/HERO_caption"
        android:text="Operations"
        android:layout_marginTop="@dimen/mon_padding"
        android:padding="@dimen/mon_padding"
        android:layout_below="@id/HERO_image"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/HERO_date"
        android:text="23 December 2098 10:33"
        android:padding="@dimen/mon_padding"
        android:layout_below="@id/HERO_caption"
        style="@style/TextStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>