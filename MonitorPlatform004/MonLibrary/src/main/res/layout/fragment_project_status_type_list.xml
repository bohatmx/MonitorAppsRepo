<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/FTST_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/FTST_hero"
            android:src="@drawable/banner_meeting3"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mon_hero_height_medium" />

        <TextView
            android:id="@+id/FTST_title"
            style="@style/Title1TextStyleWhite"
            android:text="Project Status"
            android:layout_marginTop="@dimen/mon_widest"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/FTST_subtitle"
            style="@style/TextStyleWhite"
            android:layout_below="@id/FTST_title"
            android:text="Overall Status of Project"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/FTST_layoutEditor"
        android:layout_below="@id/FTST_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/edit_dialog" />
    </RelativeLayout>

    <ListView
        android:id="@+id/FTST_list"
        android:layout_below="@id/FTST_layoutEditor"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:dividerHeight="@dimen/mon_divider"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/FTST_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/mon_hero_height_medium_lite"
        android:layout_marginRight="@dimen/mon_wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/fab_indigo" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/FTST_progress"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>