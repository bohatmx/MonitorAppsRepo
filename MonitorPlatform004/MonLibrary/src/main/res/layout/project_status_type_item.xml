<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/mon_margin"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TST_txtNumber"
        android:text="00"
        style="@style/GreenCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/TST_txtName"
        style="@style/Title3TextStyleBlack"
        android:textStyle="normal"
        android:layout_toRightOf="@id/TST_txtNumber"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="Task Status Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>