<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/mon_divider_small"
    android:background="@color/grey"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/TST_bottom"
        android:background="@color/white"
        android:padding="@dimen/mon_margin"
        android:layout_marginLeft="@dimen/mon_padding"
        android:layout_marginRight="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/TST_txtNumber"
            android:text="00"
            android:background="@drawable/xgreen_oval"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TST_txtName"
            style="@style/TextStyle"
            android:layout_toRightOf="@id/TST_txtNumber"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_centerVertical="true"
            android:text="Task Status Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>