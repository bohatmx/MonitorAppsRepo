<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/mon_padding"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/MSTF_image"
        android:src="@drawable/boy"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/mon_hero_height_small"
        android:layout_height="@dimen/mon_hero_height_small" />

    <RelativeLayout
        android:layout_toRightOf="@id/MSTF_image"
        android:padding="@dimen/mon_padding"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/MSTF_name"
            android:text="Aubrey Malabie"
            style="@style/TextStyleSmall"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/MSTF_checkBox"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mon_padding"
            android:enabled="true"
            android:buttonTint="@color/teal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>