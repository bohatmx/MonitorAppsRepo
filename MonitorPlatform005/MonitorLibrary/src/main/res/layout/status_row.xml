<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ROW_number"
        android:text="999"
        android:padding="4dp"
        style="@style/RedCircleSmall"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/ROW_date"
        android:text="30-12-2056"
        android:padding="4dp"
        style="@style/TextStyleBoldBlueSmall"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/ROW_color"
        android:text="    "
        android:padding="4dp"
        android:background="@drawable/xgreen_box"
        android:layout_height="wrap_content"
        android:layout_width="28dp" />

    <TextView
        android:id="@+id/ROW_status"
        android:text="Status Name"
        android:padding="4dp"
        style="@style/TextStyleSmall"
        android:textColor="@color/green"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/ROW_task"
        android:text="Task Name"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</TableRow>