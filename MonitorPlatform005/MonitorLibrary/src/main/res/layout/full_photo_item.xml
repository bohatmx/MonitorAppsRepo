<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    tools:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/PHOTO_top"
        android:layout_width="400dp"
        android:layout_height="600dp">



        <ImageView
            android:id="@+id/PHOTO_image"
            android:src="@drawable/under_construction"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/PHOTO_capLayout"
            android:layout_marginBottom="@dimen/mon_wide"
            android:layout_marginTop="440dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/PHOTO_caption"
                android:text="Photo caption here"
                style="@style/TextStyleSmall"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:padding="@dimen/mon_padding"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/PHOTO_date"
                android:text="Tuesday, December 2014"
                style="@style/TextStyleBlueSmall"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:padding="@dimen/mon_padding"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/PHOTO_number"
        style="@style/RedCircleSmall"
        android:text="00"
        android:layout_marginTop="@dimen/mon_margin"
        android:layout_marginLeft="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.v7.widget.CardView>