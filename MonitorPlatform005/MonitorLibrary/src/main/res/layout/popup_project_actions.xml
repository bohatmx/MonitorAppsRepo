<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/POP_image"
        android:src="@drawable/banner_meeting3"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mon_hero_height_small" />

    <RelativeLayout
        android:id="@+id/POP_siteLayout"
        android:layout_below="@id/POP_image"
        android:padding="@dimen/mon_padding"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/POP_icon1"
            android:src="@android:drawable/btn_star"
            android:tint="@color/absa_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/POP_listSites"
            style="@style/TextStyleBlue"
            android:text="@string/site_list"
            android:layout_toRightOf="@id/POP_icon1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/POP_mapLayout"
        android:layout_below="@id/POP_siteLayout"
        android:layout_marginTop="@dimen/mon_padding"
        android:padding="@dimen/mon_padding"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/POP_icon2"
            android:src="@android:drawable/btn_star"
            android:tint="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/POP_getmap"
            style="@style/TextStyleBlue"
            android:text="@string/project_map"
            android:layout_toRightOf="@id/POP_icon2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>