<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/TRAFF_main"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/TRAFF_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TRAFF_title"
            android:text="@string/total_updates"
            android:layout_centerHorizontal="true"
            style="@style/TextStyleSmall"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/TRAFF_top"
        android:padding="@dimen/mon_padding"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TRAFF_count"
            android:text="00"
            style="@style/Title2TextStyleBlue"
            android:textStyle="normal"
            android:layout_marginRight="@dimen/mon_wide"
            android:layout_centerVertical="true"
            android:elevation="@dimen/mon_divider"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TRAFF_grey"
            android:text="00"
            style="@style/GreyCircle"
            android:visibility="gone"
            android:layout_toRightOf="@id/TRAFF_count"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TRAFF_red"
            android:text="00"
            style="@style/RedCircleSmall"
            android:layout_toRightOf="@id/TRAFF_grey"
            android:layout_marginLeft="@dimen/mon_padding"
            android:elevation="@dimen/mon_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TRAFF_yellow"
            android:text="00"
            style="@style/OrangeCircleSmall"
            android:layout_toRightOf="@id/TRAFF_red"
            android:layout_marginLeft="@dimen/mon_padding"
            android:elevation="@dimen/mon_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TRAFF_green"
            android:text="00"
            style="@style/GreenCircleSmall"
            android:elevation="@dimen/mon_divider"
            android:layout_toRightOf="@id/TRAFF_yellow"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>