<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="10dp"
    tools:context="com.boha.monitor.library.fragments.ProjectSiteStaffListFragment">

    <RelativeLayout
        android:id="@+id/STAFF_LIST_top"
        android:padding="16dp"
        android:background="@color/beige_pale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/STAFF_LIST_staffCount"
            android:text="00"
            style="@style/BlackCircle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/STAFF_LIST_label"
            style="@style/Title2TextStyleGrey"
            android:layout_centerVertical="true"
            android:text="@string/project_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_marginTop="10dp"
        android:layout_below="@id/STAFF_LIST_top"
        android:background="@color/white"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

</RelativeLayout>
