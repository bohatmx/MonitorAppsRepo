<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/mon_divider"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boha.monitor.library.fragments.NewChatFragment">

    <RelativeLayout
        android:id="@+id/NEWCHAT_top"
        android:padding="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:background="@color/steel_blue"
        android:layout_height="@dimen/mon_hero_height_medium">

        <TextView
            android:id="@+id/NEWCHAT_title"
            style="@style/Title1TextStyleWhite"
            android:text="Chat Channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/NEWCHAT_subtitle"
            android:layout_below="@id/NEWCHAT_title"
            android:layout_marginTop="@dimen/mon_margin"
            style="@style/TextStyleGreySmall"
            android:text="Create a Chat Channel for communications among the members of the Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NEWCHAT_middle"
        android:layout_below="@id/NEWCHAT_top"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mon_divider"
        android:padding="@dimen/mon_margin"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/NEWCHAT_projectName"
            android:layout_marginTop="@dimen/mon_margin"
            style="@style/Title2TextStyleBlue"
            android:text="@string/select_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/NEWCHAT_editor"
            android:layout_below="@id/NEWCHAT_projectName"
            android:layout_marginTop="@dimen/mon_margin"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                style="@style/Title3TextStyleBlack"
                android:layout_marginTop="@dimen/mon_divider"
                android:hint="Enter Channel Name"
                android:id="@+id/NEWCHAT_chatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <include
                layout="@layout/colors"
                android:layout_marginTop="@dimen/mon_margin"
                android:layout_below="@id/NEWCHAT_chatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/COLORS_close"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_marginRight="@dimen/mon_wide"
                android:layout_alignParentRight="true"
                android:layout_marginTop="64dp"
                android:tint="@color/absa_red"
                android:elevation="@dimen/mon_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NEWCHAT_bottom"
        android:layout_below="@id/NEWCHAT_middle"
        android:layout_marginTop="@dimen/mon_divider"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/NEWCHAT_list"
            android:dividerHeight="@dimen/mon_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NEWCHAT_colorsLayout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/mon_wide"
        android:layout_marginTop="@dimen/mon_hero_height_medium_lite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/fab_indigo" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
