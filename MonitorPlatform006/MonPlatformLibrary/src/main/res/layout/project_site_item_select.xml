<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/mon_padding"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/SS_number"
        style="@style/GreyCircleSmall"
        android:text="1"
        android:layout_marginLeft="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/SS_siteName"
        android:text="Project Site Name"
        android:layout_toRightOf="@id/SS_number"
        android:layout_marginLeft="@dimen/mon_padding"
        android:layout_marginTop="@dimen/mon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/SS_chkSelected"
        android:text="Select"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/mon_wide"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>