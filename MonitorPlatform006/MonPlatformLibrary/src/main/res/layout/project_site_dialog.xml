<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/PSD_banner"
        android:src="@drawable/banner_gold2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/PSD_top"
        android:layout_below="@id/PSD_banner"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/PSD_project"
            style="@style/Title2TextStyleBlack"
            android:text="Project Name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PSD_bottom"
        android:layout_marginTop="16dp"
        android:layout_below="@id/PSD_top"
        android:background="@color/beige_pale"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/PSD_title"
            style="@style/Title2TextStyleGrey"
            android:text="@string/project_site_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/PSD_imgDelete"
            android:src="@android:drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PSD_titleLayout"
        android:layout_below="@id/PSD_bottom"
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/PSD_editName"
            android:layout_marginTop="20dp"

            android:hint="@string/enter_project_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/PSD_spinner"
            android:layout_marginTop="16dp"
            android:layout_below="@id/PSD_editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/PSD_titleLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/mon_margin"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/PSD_btnCancel"
            style="@style/ButtonCancel"
            android:text="@string/cancel"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/PSD_btnSave"
            android:layout_below="@id/PSD_btnCancel"
            style="@style/ButtonRed"
            android:layout_marginTop="16dp"
            android:text="@string/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/PSD_progress"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

