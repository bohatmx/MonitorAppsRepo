<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/BC_top"
        android:background="@color/beige_pale"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/BC_hero"
            android:src="@drawable/banner_construction13"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mon_hero_height_small" />

        <TextView
            android:id="@+id/BC_title"
            style="@style/Title2TextStyleGrey"
            android:text="@string/bennie_list"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/mon_wide"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@id/BC_hero"
            android:background="@color/white"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/BC_projectName"
                android:text="Project Name Here"
                style="@style/Title2TextStyleBlue"
                android:layout_marginLeft="@dimen/mon_padding"
                android:layout_centerVertical="true"
                android:elevation="@dimen/mon_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/BC_list"
        android:layout_below="@id/BC_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:dividerHeight="5dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/BC_count"
        style="@style/RedCircle"
        android:text="+"
        android:layout_marginRight="@dimen/mon_padding"
        android:layout_marginTop="@dimen/mon_wider"
        android:elevation="@dimen/mon_padding"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/mon_wide"
        android:layout_marginLeft="@dimen/mon_wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>