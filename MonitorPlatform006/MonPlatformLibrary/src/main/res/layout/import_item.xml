<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:background="@color/grey"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/IMPI_layout0"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/IMPI_topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/IMPI_image"
                    android:src="@drawable/ic_action_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/IMPI_txtName"
                    android:text="Player Name"
                    android:layout_marginLeft="10dp"
                    style="@style/Title2TextStyleBlue"
                    android:layout_toRightOf="@id/IMPI_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/IMPI_txtEmail"
                    android:text="Player Email Address"
                    style="@style/TextStyle"
                    android:layout_below="@id/IMPI_txtName"
                    android:layout_marginLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/IMPI_txtNumber"
                    android:text="@string/zero"
                    style="@style/TextStyleGrey"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/IMPI_image"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/IMPI_bottomLayout"
                android:layout_width="match_parent"
                android:layout_below="@id/IMPI_topLayout"
                android:layout_height="wrap_content">

            <CheckBox
                    android:id="@+id/IMPI_checkBox"
                    android:text="@string/select_imp_playr"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>