<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/HERO_STATUS_image"
        android:src="@drawable/banner_meeting3"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mon_hero_height_medium_lite" />

    <RelativeLayout
        android:layout_marginTop="@dimen/mon_wider"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/HERO_STATUS_statusCount"
            style="@style/RedCircle"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/HERO_STATUS_statusLabel"
            style="@style/TextStyleSmall"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/HERO_STATUS_statusCount"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:text="@string/status_update_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/HERO_STATUS_title"
        style="@style/Title2TextStyleBlue"
        android:text="@string/project_status"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/mon_wider"
        android:layout_marginLeft="@dimen/mon_wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/HERO_STATUS_projectName"
        style="@style/Title1TextStyleBlue"
        android:layout_below="@id/HERO_STATUS_title"
        android:textColor="@color/white"
        android:text="Project Name Here"
        android:layout_marginLeft="@dimen/mon_wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>