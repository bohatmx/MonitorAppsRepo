<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    tools:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_margin="@dimen/mon_margin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/SRC_nameLayout"
            android:padding="@dimen/mon_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SRC_txtColor"
                style="@style/GreyCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/SRC_txtTask"
                style="@style/TextStyle"
                android:text="Task Name"
                android:layout_toRightOf="@id/SRC_txtColor"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SRC_statusLayout"
            android:layout_below="@id/SRC_nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SRC_txtStatus"
                style="@style/Title3TextStyleBlack"
                android:text="Status here"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/SRC_txtDate"
                style="@style/TextStyleBoldBlueSmall"
                android:layout_below="@id/SRC_txtStatus"
                android:text="Tuesday, 14 Decemeber 2014"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SRC_staffLayout"
            android:layout_below="@id/SRC_statusLayout"
            android:layout_marginTop="@dimen/mon_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SRC_txtStaff"
                style="@style/TextStyleSmall"
                android:text="Staff name here"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>

