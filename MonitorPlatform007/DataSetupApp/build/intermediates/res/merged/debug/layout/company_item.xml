<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:elevation="@dimen/mon_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/CO_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mon_padding"
        android:padding="@dimen/mon_margin">

        <RelativeLayout
            android:id="@+id/CO_actions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/mon_padding">

            <ImageView
                android:id="@+id/CO_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_wider"
                android:tint="@color/red_700"
                android:src="@drawable/ic_action_clear" />

            <ImageView
                android:id="@+id/CO_edit"
                android:layout_toRightOf="@id/CO_delete"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_mode_edit" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CO_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CO_actions_layout"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/mon_padding">

            <TextView
                android:id="@+id/CO_number"
                style="@style/BlackCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/CO_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/CO_number"
                android:text="Company Name"
                android:textAppearance="?android:attr/textAppearanceLarge"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CO_portfolioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CO_name_layout"
            android:layout_marginLeft="@dimen/mon_wide">

            <TextView
                android:id="@+id/CO_portfolioCount"
                style="@style/Title1TextStyleBlue"
                android:text="0"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/CO_programmes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/CO_portfolioCount"
                android:layout_marginRight="@dimen/mon_margin"
                android:text="Portfolios" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>