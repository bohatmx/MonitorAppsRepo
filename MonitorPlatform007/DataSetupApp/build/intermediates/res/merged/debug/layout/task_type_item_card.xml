<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/TASK_TYPE_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mon_padding"
        android:padding="@dimen/mon_padding">

        <RelativeLayout
            android:id="@+id/TASK_TYPE_actions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/mon_padding">

            <ImageView
                android:id="@+id/TASK_TYPE_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_wider"

                android:src="@drawable/ic_action_clear" />

            <ImageView
                android:id="@+id/TASK_TYPE_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_toRightOf="@id/TASK_TYPE_delete"
                android:src="@drawable/ic_action_mode_edit" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TASK_TYPE_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TASK_TYPE_actions_layout"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/TASK_TYPE_number"
                style="@style/BlueCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/TASK_TYPE_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/TASK_TYPE_number"
                android:text="Task Type Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/TASK_TYPE_sectionLayout"
            android:layout_below="@id/TASK_TYPE_name_layout"
            android:layout_marginLeft="@dimen/mon_hero_height_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TASK_TYPE_section"
                android:text="Section Name"
                style="@style/TextStyleSmall"
                android:textColor="@color/blue_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TASK_TYPE_taskCountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TASK_TYPE_sectionLayout"
            android:layout_marginLeft="@dimen/mon_wide">

            <TextView
                android:id="@+id/TASK_TYPE_taskCount"
                style="@style/Title1TextStyleRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:text="0" />

            <TextView
                android:id="@+id/TASK_TYPE_label0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_toLeftOf="@id/TASK_TYPE_taskCount"
                android:text="Tasks" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TASK_TYPE_subLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TASK_TYPE_taskCountLayout"
            android:layout_marginLeft="@dimen/mon_wide"
            android:layout_marginTop="@dimen/mon_padding">

            <TextView
                android:id="@+id/TASK_TYPE_subtaskCount"
                style="@style/Title1TextStyleGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:text="0" />

            <TextView
                android:id="@+id/TASK_TYPE_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_toLeftOf="@id/TASK_TYPE_subtaskCount"
                android:text="Sub Tasks" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>