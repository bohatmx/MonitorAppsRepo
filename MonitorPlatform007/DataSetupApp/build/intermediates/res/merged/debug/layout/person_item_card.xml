<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/PERSON_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mon_padding"
        android:padding="@dimen/mon_margin">

        <RelativeLayout
            android:id="@+id/PERSON_actions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/mon_margin">

            <ImageView
                android:id="@+id/PERSON_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_wider"

                android:src="@android:drawable/ic_menu_delete" />

            <ImageView
                android:id="@+id/PERSON_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_toRightOf="@id/PERSON_delete"
                android:src="@android:drawable/ic_menu_edit" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PERSON_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PERSON_actions_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mon_padding"
            android:padding="@dimen/mon_margin">

            <TextView
                android:id="@+id/PERSON_number"
                style="@style/BlueCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/PERSON_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/PERSON_number"
                android:text="Monitor Name"
                android:textAppearance="?android:attr/textAppearanceLarge"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PERSON_seqLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PERSON_name_layout"
            android:layout_marginLeft="64dp">

            <TextView
                android:id="@+id/PERSON_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:text="Email Account" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>