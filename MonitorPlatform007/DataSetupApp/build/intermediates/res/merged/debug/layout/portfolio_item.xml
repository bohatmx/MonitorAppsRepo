<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/PORT_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mon_padding"
        android:padding="@dimen/mon_margin">

        <RelativeLayout
            android:id="@+id/PORT_actions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/mon_margin">

            <ImageView
                android:id="@+id/PORT_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_wider"
                android:tint="@color/red_700"
                android:src="@drawable/ic_action_clear" />

            <ImageView
                android:id="@+id/PORT_edit"
                android:layout_toRightOf="@id/PORT_delete"
                android:layout_marginLeft="@dimen/mon_wider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_mode_edit" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PORT_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PORT_actions_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mon_padding"
            android:padding="@dimen/mon_margin">

            <TextView
                android:id="@+id/PORT_number"
                style="@style/BlueCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/PORT_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/PORT_number"
                android:text="Portfolio Name"
                android:textAppearance="?android:attr/textAppearanceLarge"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PORT_programLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PORT_name_layout"
            android:layout_marginLeft="@dimen/mon_wide">

            <TextView
                android:id="@+id/PORT_programCount"
                style="@style/Title1TextStyleGreen"
                android:text="0"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/PORT_programmes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/PORT_programCount"
                android:layout_marginRight="@dimen/mon_wide"
                android:text="Portfolio Programmes" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/PORT_projectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mon_padding"
            android:layout_below="@id/PORT_programLayout"
            android:layout_marginLeft="@dimen/mon_wide">

            <TextView
                android:id="@+id/PORT_projectCount"
                style="@style/Title1TextStyleBlack"
                android:text="0"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/PORT_projectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/PORT_projectCount"
                android:layout_marginRight="@dimen/mon_wide"
                android:text="Portfolio Projects" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>