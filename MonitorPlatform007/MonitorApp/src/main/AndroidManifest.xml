<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boha.platform.monitor" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.boha.monitor.library.activities.MonApp"
        android:theme="@style/TealTheme" >
        <!-- Keys and metadata -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCi7zV2Tc8ItuEXho4Jda1Y-Xh4IyqlkG4" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name=".activities.SignInActivity"
            android:label="@string/monitor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.GcmIntentService" />

        <receiver
            android:name=".services.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.boha.citizenapp.ethekwini" />
            </intent-filter>
        </receiver>


        <activity
            android:name=".activities.MainDrawerActivity"
            android:label="@string/title_activity_main_drawer" >
        </activity>
        <activity
            android:name="com.boha.monitor.library.activities.ProjectTaskListActivity"
            android:label="@string/title_activity_status_update" >
        </activity>
        <activity android:name="com.boha.monitor.library.activities.CameraActivity"/>
        <activity android:name="com.boha.monitor.library.activities.ThemeSelectorActivity"/>
        <activity
            android:name="com.boha.monitor.library.activities.TaskUpdateActivity"
            android:label="@string/title_activity_task_update" >
        </activity>
        <activity
            android:name="com.boha.monitor.library.activities.TaskTypeListActivity"
            android:label="@string/title_activity_task_type_list" >
        </activity>
        <activity android:name="com.boha.monitor.library.activities.PictureActivity"/>
    </application>

    <permission
        android:name="com.boha.platform.monitor.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.boha.platform.monitor.gcm.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


</manifest>
