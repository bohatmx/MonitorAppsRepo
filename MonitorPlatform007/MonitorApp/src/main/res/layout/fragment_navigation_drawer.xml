<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:background="@color/white"
    tools:context="com.boha.staff.activities.NavigationDrawerFragment" >

    <RelativeLayout
        android:id="@+id/NAV_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/NAV_image"
            android:src="@drawable/back1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/NAV_subtitle"
            android:text="SubTitleHere"
            style="@style/Title3TextStyleWhite"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_marginTop="160dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/NAV_personImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/black_woman"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/mon_wide"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NAV_subLayout"
        android:layout_below="@id/NAV_topLayout"
        android:background="@color/white"
        android:padding="@dimen/mon_wide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <ListView android:id="@+id/NAV_list"
        android:layout_below="@id/NAV_topLayout"
        android:layout_marginTop="@dimen/mon_wide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        tools:context="com.boha.platform.monitor.fragments.NavigationDrawerFragment" />



</RelativeLayout>

