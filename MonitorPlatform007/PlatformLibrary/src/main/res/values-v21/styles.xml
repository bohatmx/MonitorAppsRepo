        <item name="colorPrimaryDark">@color/green_lite_600</item>
        <item name="colorAccent">@color/indigo_600</item>
    </style>

    <style name="AmberTheme" parent="MonTheme">
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryDark">@color/amber_900</item>
        <item name="colorAccent">@color/red_600</item>
    </style>

    <style name="GreyTheme" parent="MonTheme">
        <item name="colorPrimary">@color/grey_600</item>
        <item name="colorPrimaryDark">@color/grey_800</item>
        <item name="colorAccent">@color/blue_600</item>
