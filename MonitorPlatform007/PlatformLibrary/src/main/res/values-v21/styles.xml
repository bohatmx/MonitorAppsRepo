    </style>

    <style name="BrownTheme" parent="MonTheme">
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryDark">@color/brown_800</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoSpinnerTextStyle" parent="android:Widget.Holo.Light.TextView.SpinnerItem">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoSpinnerDropDownStyle" parent="android:Widget.Holo.Light.TextView.SpinnerItem">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoTextStyle" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/smallWhiteText</item>
    </style>
    <style name="mgStyle">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Pager">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PagerSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/mon_margin</item>
        <item name="android:background">@color/light_blue_500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="smallWhiteText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>