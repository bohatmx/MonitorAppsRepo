<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boha.monitor.library.fragments.ProjectTaskListFragment">

    <RelativeLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/project_list_header"/>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_below="@id/topBox"
        android:scrollbars="vertical"
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/TSK_camera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="@color/white"
        android:layout_margin="@dimen/mon_wider"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_menu_camera" />

</RelativeLayout>