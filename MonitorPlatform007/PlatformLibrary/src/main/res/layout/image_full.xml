<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/IMI_image"
        android:src="@drawable/under_construction"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/IMI_caption2"
        style="@style/TextStyle"
        android:layout_alignParentBottom="true"
        android:text="ProjectName - TaskName Here"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/mon_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/IMI_caption1"
        style="@style/TextStyle"
        android:layout_above="@id/IMI_caption2"
        android:text="Saturday, 2015-02-27 10:30"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/mon_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>