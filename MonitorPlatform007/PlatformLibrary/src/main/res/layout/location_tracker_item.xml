<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/mon_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/LT_image"
        android:layout_width="@dimen/mon_wider"
        android:layout_height="@dimen/mon_wider"
        android:src="@drawable/common_full_open_on_phone" />

    <RelativeLayout
        android:layout_toRightOf="@id/LT_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/LT_txtDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mon_padding"
            android:text="Device Name and Model"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/LT_txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LT_txtDevice"
            android:padding="@dimen/mon_padding"
            android:text="Staff or Monitor name"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/LT_txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LT_txtSubtitle"
            android:padding="@dimen/mon_padding"
            android:text="Last Date of Location"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>


</RelativeLayout>