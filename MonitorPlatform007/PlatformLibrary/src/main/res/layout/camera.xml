<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/CAM_layout0"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mon_padding">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/CAM_radioPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingRight="@dimen/mon_wide"
                android:text="Take Photos"
                android:textColor="@color/white" />


            <RadioButton
                android:id="@+id/CAM_radioVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Make a Video"
                android:textColor="@color/white" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/CAM_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CAM_layout0">

        <TextView
            android:id="@+id/CAM_projectName"
            style="@style/Title2TextStyleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_marginTop="@dimen/mon_wide"
            android:text="Project Name Here" />

        <TextView
            android:id="@+id/CAM_siteName"
            style="@style/Title2TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CAM_projectName"
            android:layout_marginLeft="@dimen/mon_margin"
            android:layout_marginTop="@dimen/mon_padding"
            android:text="Task Name Here" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mon_padding"
            android:background="@color/white"
            android:scrollbars="vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonRed"
            android:elevation="@dimen/mon_padding"
            android:padding="@dimen/mon_padding"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/take_picture"
            android:layout_margin="@dimen/mon_padding"
            android:drawableTop="@drawable/ic_action_camera" />

    </RelativeLayout>


</RelativeLayout>