<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/mon_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/PRH_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mon_hero_height_large"
        android:scaleType="centerCrop"
        android:src="@drawable/back1" />

    <RelativeLayout
        android:id="@+id/PRH_top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/PRH_programme"
            style="@style/Title3TextStyleWhite"
            android:layout_marginTop="@dimen/mon_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programme Name" />
    </RelativeLayout>
    <TextView
        android:id="@+id/PRH_count"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:layout_margin="@dimen/mon_margin"
        style="@style/TransparentCircle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="9,778" />

</RelativeLayout>