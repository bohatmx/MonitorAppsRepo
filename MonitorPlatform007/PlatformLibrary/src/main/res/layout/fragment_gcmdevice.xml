<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/mon_padding"
    card_view:cardCornerRadius="@dimen/mon_margin"
    android:padding="@dimen/mon_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/DEV_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mon_margin">

            <ImageView
                android:id="@+id/DEV_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_location_on" />

            <TextView
                android:id="@+id/DEV_model"
                style="@style/Title3TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/DEV_image"
                android:text="Device Model" />


            <TextView
                android:id="@+id/DEV_manufacturer"
                style="@style/Title3TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/DEV_model"
                android:text="Manufacturer" />
        </RelativeLayout>

        <TextView
            android:id="@+id/DEV_person"
            style="@style/Title2TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DEV_top"
            android:layout_marginLeft="@dimen/mon_wider"
            android:text="Person Name" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
