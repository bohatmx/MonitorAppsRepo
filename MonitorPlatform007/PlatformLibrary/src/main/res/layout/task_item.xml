<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:cardCornerRadius="8dp"
    tools:cardElevation="@dimen/mon_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/mon_margin">

        <RelativeLayout
            android:id="@+id/TSK_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mon_padding">

            <ImageView
                android:id="@+id/TSK_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@android:drawable/btn_star" />

            <TextView
                android:id="@+id/TSK_taskName"
                style="@style/Title3TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/TSK_icon"
                android:text="Project Task Name Here" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TSK_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TSK_top"
            android:layout_marginTop="@dimen/mon_divider"
            android:padding="@dimen/mon_padding">

            <TextView
                android:id="@+id/TSK_label1"
                style="@style/TextStyleGreySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Updates" />

            <TextView
                android:id="@+id/TSK_statusCount"
                style="@style/Title2TextStyleGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_toRightOf="@id/TSK_label1"
                android:text="303" />

            <TextView
                android:id="@+id/TSK_label2"
                style="@style/TextStyleGreySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/TSK_statusCount"
                android:text="Last Date" />

            <TextView
                android:id="@+id/TSK_date"
                style="@style/TextStyleBoldBlueSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_toRightOf="@id/TSK_label2"
                android:text="23 December 2099" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TSK_middle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TSK_middle"
            android:layout_marginTop="@dimen/mon_divider"
            android:padding="@dimen/mon_padding">

            <TextView
                android:id="@+id/TSK_label3"
                style="@style/TextStyleGreySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Photos taken for Task:"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TSK_photoCount"
                style="@style/Title2TextStyleBlack"
                android:textColor="@color/red_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_toRightOf="@id/TSK_label3"
                android:text="3,703" />


        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>