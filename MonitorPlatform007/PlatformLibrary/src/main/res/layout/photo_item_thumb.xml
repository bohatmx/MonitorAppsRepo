<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:background="@color/white"
    android:padding="@dimen/mon_padding"
    tools:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/PHOTO_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/PHOTO_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxWidth="240dp"
            android:maxHeight="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/under_construction" />

        <RelativeLayout
            android:id="@+id/PHOTO_capLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/mon_wide"
            android:background="@color/transparent_black"
            android:padding="@dimen/mon_padding">

            <TextView
                android:id="@+id/PHOTO_caption"
                style="@style/TextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Photo caption here"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/PHOTO_date"
                style="@style/TextStyleBlueSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/PHOTO_caption"
                android:layout_centerHorizontal="true"
                android:text="Tuesday, December 2014"
                android:textColor="@color/yellow"
                android:textSize="10sp" />
        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/PHOTO_numberAmber"
        style="@style/AmberCircleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_padding"
        android:text="0000" />
    <TextView
        android:id="@+id/PHOTO_numberRed"
        style="@style/RedCircleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_padding"
        android:text="0000" />
    <TextView
        android:id="@+id/PHOTO_numberGreen"
        style="@style/GreenCircleSmall"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_padding"
        android:text="0000" />
    <TextView
        android:id="@+id/PHOTO_numberNone"
        style="@style/BlackCircleSmall"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_padding"
        android:text="0000" />


