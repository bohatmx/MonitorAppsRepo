<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:cardCornerRadius="@dimen/mon_padding"
    tools:cardElevation="@dimen/mon_padding">

    <RelativeLayout
        android:id="@+id/STI_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/mon_padding">

        <TextView
            android:id="@+id/STI_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xblue_oval_small"
            android:gravity="center"
            android:text="R"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/STI_statusType"
            style="@style/TextStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_toRightOf="@id/STI_color"
            android:text="Task Status Type Here"
            android:textStyle="normal" />

    </RelativeLayout>
</android.support.v7.widget.CardView>