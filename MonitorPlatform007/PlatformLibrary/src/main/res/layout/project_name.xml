<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/translucent_red"
    android:gravity="center"
    android:padding="@dimen/mon_divider"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/roundImage"
        android:src="@drawable/ic_action_location_on"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:text="name comes here"
        android:layout_marginLeft="@dimen/mon_padding"
        android:layout_centerVertical="true"
        style="@style/TextStyleSmall"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/roundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>