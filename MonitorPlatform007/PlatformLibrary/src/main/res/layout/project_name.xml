<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/xborder"
    android:gravity="center"
    android:padding="@dimen/mon_padding"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statusColor"
        android:background="@drawable/xamber_oval_small"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/name"
        android:text="name comes here"
        android:layout_marginLeft="@dimen/mon_padding"
        android:layout_centerVertical="true"
        style="@style/TextStyleBold"
        android:textColor="@color/blue_900"
        android:layout_toRightOf="@id/statusColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>