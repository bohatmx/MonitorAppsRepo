    <style name="AmberTheme" parent="MonTheme">
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryDark">@color/amber_900</item>
        <item name="colorAccent">@color/accent01</item>
    </style>

    <style name="GreyTheme" parent="MonTheme">
